<h2>Edit Question</h2>
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
	<p>
		code<br>
		<%= f.text_field :code %>
	</p>

	<p>
		question<br>
		<%= f.text_area :question %>
	</p>

	<p>
		status<br>
		<%= f.text_field :status %>
	</p>

	<p>
		point<br>
		<%= f.text_field :bal %>
	</p>

	<p>
		<%= f.submit("EDIT QUESTION") %>
	</p>

	<% end %>